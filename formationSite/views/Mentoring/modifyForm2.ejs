    <body>
      <section class="h-100 bg-dark ">   
        <div class="container py-5 h-100">
          <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
              <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                <div class="card-body p-4 p-md-5">
                  <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Definir chapitres</h3>
                  <%if(typeof alert!='undefined') { %>
                         <div class="alert alert-success" role="alert">
                    la section <%=s%> est bien enregistré
                  </div>
                  <%}%>
                

                  <%if(typeof test!='undefined') { %>     <div class="alert alert-success" role="alert">
                    la description est bien enregistré 
                  </div>
                 <%}%>
                  <%if(typeof s=='undefined') {   var s=0 } else {s++}%> 
               
                 <form action="/modifyForm2/<%=formation._id%>/<%=s%>" method="post">
                  
           <%var it=s+1%>
                    <h3> section  <%=it%></h3>
                    <hr>
                    <div class="row">
                      
                      <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Entrer le titre</label>
                        <input type="text"required name="title"  class="form-control" id="exampleFormControlInput1" placeholder="Enter le titre de section " value="<%=formation.chapters[s].title%>">
                      </div>
                      <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Entrer le code de l'url de video <i>(optionnelle)</i></label>
                        <input type="text" name="urlVideo"  class="form-control" placeholder="Enter l'url video  " value="<%=formation.chapters[s].urlVideo%>">
                      </div>

         

      
                      </div>
  
                    <div class="form-group">
                     
                      <label>Entrer  contenu du section </label>

                    <textarea rows="5" cols="50"class="form-control" name="content"  required name="content" >
                       <%=formation.chapters[s].content%>
                      </textarea>
                      </div>


                        <div  class="d-flex justify-content-between">  
                                             
                       <%if(typeof lastsection =='undefined' )    {%> <input  class="btn btn-primary btn-lg" type="submit" value="Submit" /> <%}%> 
                            
                     <a href="/"> <input  type="button"class="btn btn-primary"  value="go home"></a>


                            </div>

                 
                      </form>

                   
                     
                    <div class="row">
                      <div class="col-md-6 mb-4 d-flex align-items-center">
      
      
                      </div>
                    
                    </div>
      
                    <div class="mt-4 pt-2">
                     
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

