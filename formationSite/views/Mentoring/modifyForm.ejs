    <body>
      <div class="container">
      <nav aria-label="breadcrumb" style="margin-top: 35px;">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/" style="text-decoration: none;">Home</a></li>
          <li class="breadcrumb-item active" aria-current="page" >Modify Course</li>
        </ol>
      </nav>
</div>
<section class="h-100 bg-dark ">
<form action="/modifyForm/<%=form._id%>" method="post">
      <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
          <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
              <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                <div class="card-body p-4 p-md-5">
                  <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Modify Course</h3>
                  <form>
      
                    <div class="row">
                      <div class="col-md-6 mb-4">
      
                        <div class="form-outline">
                          <input type="text" name="title"  class="form-control form-control-lg" placeholder="Enter title" value="<%=form.title%>"/>
                        </div>
      
                      </div>
                      <div class="col-md-6 mb-4">
      
                        <div class="form-outline">
                          <select class="select form-control-lg" name="category">
                            <option  disabled>Choose option for category</option>
                            <option value="Developpement">Developpement</option>
                            <option value="BigData">BIG DATA</option>
                            <option value="web Design">WEB DESIGN </option>
                            <option value="Systèmes & Réseaux">Systèmes & Réseaux </option>
                            <option value="Gestion de projet">Gestion de projet</option>
                            <option value="cybersecurite">Cybersécurité</option>

                          </select>
        </div>
      
                      </div>
                    </div>


                    <div class="form-group">
                     
                      <label>Entrer une description</label>

                    <textarea rows="4" cols="50"class="form-control"  required name="description">
                     <%=form.description%>
                      </textarea>
                      </div>
      
                    <div class="row">
                      <div class="col-md-6 mb-4 d-flex align-items-center">
      
      
                      </div>
                    
                    </div>

  
                      <div class="row">
                      
                        <div >
                          <label class="form-label select-label">Entrer l'image cours</label>
          <div class="form-outline">
            <input type="text" name="urlImage"  class="form-control form-control-lg" placeholder="Enter l'url de l'image" value="<%=form.urlImage%>"/>
          </div>


          </div>
          <br>

          <div class="col-md-6 mb-4">
      <label>Entrer un niveau</label>
            <div class="form-outline">
              <select class="select form-control-lg" name="niveau">
                <option  disabled>Selectionner niveau</option>
                <option value="facile">Facile</option>
                <option value="Moyenne">Moyenne</option>
                <option value="Difficile">Difficile</option>
              

              </select>
</div>
        
                        </div>
               


                    </div>
      
                    <div class="mt-4 pt-2">
                      <input class="btn btn-primary btn-lg" type="submit" value="modifier" required />
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
