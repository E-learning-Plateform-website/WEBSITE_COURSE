<link href="css/signin.css" rel="stylesheet">

</head>

<div class="wrapper fadeInDown">
  <div id="formContent">
    <!-- Tabs Titles -->

    <!-- Icon -->
    <div class="fadeIn first">
<img src="https://cdn-icons-png.flaticon.com/512/5087/5087579.png">  <br> </div>

    <!-- Login Form -->
    <form action="loginAdmin" method="post">
      <input type="text" class="fadeIn second" name="email" placeholder="Enter email">
      <input type="text" class="fadeIn third" name="password" placeholder="Enter password">
      <input type="submit" class="fadeIn fourth" value="Log In">
                   
      <%if (typeof errors!='undefined') {%>
                <%if(errors.length>0){%>  
        <%  errors.forEach((error)=>
         {%> <div class="alert alert-danger" role="alert" style="margin:20px"> 
        <%=error.msg%> 
        </div>
        <% })%> 
        <%}%>
        

       <% }%>
    </form>

    <!-- Remind Passowrd -->
    <div id="formFooter">
      <a class="underlineHover" href="#">Forgot Password?</a>
    </div>

  </div>
</div>